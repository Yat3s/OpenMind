<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contain_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.imooc.openmind.widget.AnimateLinearLayout
        android:id="@+id/host_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/md_teal_400"/>

    <com.imooc.openmind.widget.AnimateLinearLayout
        android:id="@+id/guest_middle_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <com.imooc.openmind.widget.AnimateLinearLayout
            android:id="@+id/guest_middle_left_layout"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@color/md_blue_400"/>

        <com.imooc.openmind.widget.AnimateLinearLayout
            android:id="@+id/guest_middle_right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_red_400"/>
    </com.imooc.openmind.widget.AnimateLinearLayout>

    <com.imooc.openmind.widget.AnimateLinearLayout
        android:id="@+id/guest_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.imooc.openmind.widget.AnimateLinearLayout
            android:id="@+id/guest_bottom_left_layout"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@color/md_deep_purple_800"
            android:orientation="vertical"/>

        <com.imooc.openmind.widget.AnimateLinearLayout
            android:id="@+id/guest_bottom_right_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_yellow_400"
            android:orientation="vertical"/>

    </com.imooc.openmind.widget.AnimateLinearLayout>
</LinearLayout>